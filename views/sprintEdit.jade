extends layout

block content
    script(src='/javascripts/sprintEdit.js')
    #header
      h1#sprintName
      button#deleteSprintBtn.btn.btn-default.transparent.col-md-offset-10 Sprint löschen
    hr
    p#descriptionHead.row Beschreibung:
    p#description.col-md-4.col-md-offset-4
    p#author.row
    p#begin.row
    p#end.row
    hr

    #message
    #taskContainer.col-md-6
        p  Task auswählen die in den Sprint sollen:
    #taskContainer2.col-md-6
        p  Task auswählen die aus den Sprint sollen:
    button#save.btn.btn-default.transparent.col-md-12  Speichern
    input#sprintId(type="hidden" value="#{title}")

    #dialog-form-sprint(title="Sprint umbennen")
        form#renameSprintForm(method='post' enctype='application/json')
            .form-group
                p#messageShowSprint
            .form-group
                label(for='sprintChange') Sprint
                textarea#sprintChange.form-control.transparent(rows = '1', name='Sprint')

    #dialog-form-description(title="Beschreibung ändern")
        form#renameDescriptionForm(method='post' enctype='application/json')
            .form-group
                p#messageShowDescription
            .form-group
                label(for='descriptionChange') Beschreibung
                textarea#descriptionChange.form-control.transparent(rows= '7', name='Beschreibung')

    #dialog-form-startDate(title="Startdatum ändern")
        form#changeStartDateForm(method='post' enctype='application/json')
            .form-group
                p#messageShowStartDate
            .form-group
                label(for='startDateChange') Startdatum
                textarea#startDateChange.form-control.transparent(rows= '1', name='Startdatum')

    #dialog-form-endDate(title="Enddatum ändern")
        form#changeEndDateForm(method='post' enctype='application/json')
            .form-group
                p#messageShowEndDate
            .form-group
                label(for='endDateChange') Enddatum
                textarea#endDateChange.form-control.transparent(rows= '1', name='Enddatum')

    #dialog-form-delete(title="Sprint wirklich löschen?")
        p Soll der Sprint wirklich gelöscht werden?
